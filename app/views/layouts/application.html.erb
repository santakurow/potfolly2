<!DOCTYPE html>
<html>
  <head>
    <title>Potfolly2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" >

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <% if current_page?("/mypage/profile") || current_page?("/mypage/reset-password") %>
        <div class="alert alert-<%= type %> mb-0 flash-msg" id="flash-msg"><%= msg %></div>
      <% else %>
        <div class="alert alert-<%= type %> mb-0" id="flash-msg"><%= msg %></div>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
